{
	"name": "@scg82/minimist",
	"version": "2.0.2",
	"description": "parse argument options (esm fork)",
	"type": "module",
	"module": "index.js",
	"exports": "./index.js",
	"devDependencies": {
		"@tsconfig/node18": "^1.0.1",
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.47.1",
		"@typescript-eslint/parser": "^5.47.1",
		"@vitest/coverage-c8": "^0.26.2",
		"aud": "^2.0.2",
		"auto-changelog": "^2.4.0",
		"eslint": "^8.31.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"in-publish": "^2.0.1",
		"npmignore": "^0.3.0",
		"nyc": "^15.1.0",
		"prettier": "^2.8.1",
		"prettier-plugin-organize-imports": "^3.2.1",
		"safe-publish-latest": "^2.0.0",
		"tape": "^5.6.1",
		"vitest": "^0.26.2"
	},
	"scripts": {
        "build": "tsc",
        "build:test": "tsc --outDir src",
		"prepublishOnly": "safe-publish-latest",
		"prepublish": "not-in-publish || npm run prepublishOnly",
		"lint": "eslint --ext=ts,mts,js,mjs .",
		"pretest": "npm run lint",
		"tests-only": "nyc tape 'test/**/*.js'",
		"test": "npm run tests-only",
		"posttest": "aud --production",
		"version": "auto-changelog && git add CHANGELOG.md",
		"postversion": "auto-changelog && git add CHANGELOG.md && git commit --no-edit --amend && git tag -f \"v$(node -e \"console.log(require('./package.json').version)\")\""
	},
	"testling": {
		"files": "test/*.js",
		"browsers": [
			"ie/6..latest",
			"ff/5",
			"firefox/latest",
			"chrome/10",
			"chrome/latest",
			"safari/5.1",
			"safari/latest",
			"opera/12"
		]
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/SCG82/minimist.git"
	},
	"homepage": "https://github.com/SCG82/minimist",
	"keywords": [
		"argv",
		"getopt",
		"parser",
		"optimist"
	],
	"author": {
		"name": "SCG82",
		"email": "scg082+github@gmail.com"
	},
	"license": "MIT",
	"auto-changelog": {
		"output": "CHANGELOG.md",
		"template": "keepachangelog",
		"unreleased": false,
		"commitLimit": false,
		"backfillLimit": false,
		"hideCredit": true
	},
	"publishConfig": {
		"ignore": [
			".github/workflows"
		]
	}
}
